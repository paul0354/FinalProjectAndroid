<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <!-- Couleur du texte des EditText -->
        <item name="android:textColor">#000000</item>
        <!-- Couleur de l'arrière-plan des EditText -->

        <!-- Style du texte des EditText (facultatif) -->
        <item name="android:textStyle">normal</item>
        <!-- Taille de texte des EditText (facultatif) -->
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTextViewStyle" parent="Widget.AppCompat.TextView">
        <!-- Couleur du texte des TextView -->
        <item name="android:textColor">#000000</item>
        <!-- Style du texte des TextView (facultatif) -->
        <item name="android:textStyle">normal</item>
        <!-- Taille de texte des TextView (facultatif) -->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!-- Couleur du texte sélectionné dans le Spinner -->
        <item name="android:textColor">#000000</item>
        <!-- Couleur de l'arrière-plan du Spinner (facultatif) -->
        <item name="android:background">#F3C4CD</item>
        <!-- Taille de texte du Spinner (facultatif) -->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ToolbarTheme">
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
        <item name="android:background">@color/task_primary</item>
    </style>

    <style name="ToolbarTheme.Title" parent="ToolbarTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/task_primary</item>
    </style>

</resources>